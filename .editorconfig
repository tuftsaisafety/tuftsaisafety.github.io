# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# HTML files
[*.html]
indent_style = space
indent_size = 4
max_line_length = 120

# CSS files
[*.css]
indent_style = space
indent_size = 4
max_line_length = 100

# JavaScript files
[*.js]
indent_style = space
indent_size = 4
max_line_length = 100

# JSON files
[*.json]
indent_style = space
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 4

# Markdown files
[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
max_line_length = off

# Package files
[{package.json,package-lock.json}]
indent_style = space
indent_size = 4
